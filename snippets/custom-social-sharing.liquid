<!-- /snippets/social-sharing.liquid -->
<ul class="social-sharing">

  {% if section.settings.share_facebook %}
    <li>
      <a target="_blank" href="//www.facebook.com/sharer.php?u={{ shop.url | append: share_permalink }}" class="btn btn--small btn--share share-facebook">
        {% include 'icon-facebook' %}
        <span class="share-title" aria-hidden="true">{{ 'general.social.share_on_facebook' | t }}</span>
        <span class="visually-hidden">{{ 'general.social.alt_text.share_on_facebook' | t }}</span>
      </a>
    </li>
  {% endif %}

  {% if section.settings.share_twitter %}
    <li>
      <a target="_blank" href="//twitter.com/share?text={{ share_title | url_param_escape }}&amp;url={{ shop.url | append: share_permalink }}" class="btn btn--small btn--share share-twitter">
        {% include 'icon-twitter' %}
        <span class="share-title" aria-hidden="true">{{ 'general.social.share_on_twitter' | t }}</span>
        <span class="visually-hidden">{{ 'general.social.alt_text.share_on_twitter' | t }}</span>
      </a>
    </li>
  {% endif %}

  {% if section.settings.share_email %}
    <li>      
      <a href="mailto:?subject=I wanted you to check this product from OUTANDBACKOUTDOOR&amp;body=Check out this now {{ shop.url | append: share_permalink }}!" title="Share by Email" class="btn btn--small btn--share">
        <img src="{{ 'icon-envelope.png' | asset_img_url: 'master' }}" />
        <span class="share-title" aria-hidden="true">Email</span>
        <span class="visually-hidden">Share on Email</span>
      </a>
    </li>
  {% endif %}

  {% if section.settings.share_sms %}
    <li>      
      <a href="sms:?&body=I wanted you to check this product from OUTANDBACKOUTDOOR {{ shop.url | append: share_permalink }}!" title="Share by SMS" class="btn btn--small btn--share">
        <img src="{{ 'icon-sms.png' | asset_img_url: 'master' }}" />
        <span class="share-title" aria-hidden="true">SMS</span>
        <span class="visually-hidden">Share on SMS</span>
      </a>
    </li>
  {% endif %}

</ul>
