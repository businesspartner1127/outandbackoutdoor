{{ 'custom-multi-collection.css' | asset_url | stylesheet_tag }}

{% style %}
    .section-{{ section.id }} {
        padding-top: {{ section.settings.padding_top }}em;
        padding-bottom: {{ section.settings.padding_bottom }}em;
    }
    .section-{{ section.id }} .cs-container h2 {
        color: {{ section.settings.title_color }};
    }
    .section-{{ section.id }} .cs-container p {
        color: {{ section.settings.paragraph_color }};
    }
    .section-{{ section.id }} .cs-container .cs-grid .cs-card .cs-content a {
        background: {{ section.settings.button_color }};
        border: 1px solid {{ section.settings.button_color }};
        color: {{ section.settings.button_text_color }};
        transition: all 0.4s;
    }
    .section-{{ section.id }} .cs-container .cs-grid .cs-card .cs-content a:hover {
        border: 1px solid {{ section.settings.button_color }};
        color: {{ section.settings.button_color }};
        background: {{ section.settings.button_text_color }};
    }
{% endstyle %}

<section id="{{ section.id }}" class="section-{{ section.id }} cs-multi-collection">
    <div class="cs-container">
        <h2>{{ section.settings.heading }}</h2>
        <p>{{ section.settings.caption }}</p>
        <div class="cs-grid">
            <div class="swiper-{{ section.id }}">
                    <div class="swiper-wrapper">
                        {% for block in section.blocks %}
                            {% if block.type == 'collection' %}
                                {% if block.settings.collection.image %}
                                    {%- assign collection_image = block.settings.collection.image -%}
                                {% elsif block.settings.collection.products.first and block.settings.collection.products.first.media != empty %}
                                    {%- assign collection_image = block.settings.collection.products.first.featured_media.preview_image -%}
                                {% else %}
                                    {% assign collection_image = blank %}
                                {% endif %}
                                    <div class="swiper-slide">
                                        <div class="cs-card {{ block.id }} lazyload" data-bg="{{ collection_image | img_url: 'master' }}">
                                            <div class="cs-content">
                                                <div class="cs-overlay"></div>
                                                <h2 style="color: {{ block.settings.block_title_color }};">
                                                    {% if block.settings.block_title != blank %}
                                                        {{ block.settings.block_title }}
                                                    {% else %}
                                                        {{ block.settings.collection.title }}
                                                    {% endif %}
                                                </h2>
                                                <p style="color: {{ block.settings.block_paragraph_color }};">
                                                    {% if block.settings.block_paragraph != blank %}
                                                        {{ block.settings.block_paragraph }}
                                                    {% else %}
                                                        {{ block.settings.collection.metafields.custom.short_description }}
                                                    {% endif %}
                                                </p>                                                
                                                <a href="{{ block.settings.collection.url }}">
                                                    BROWSE {% if block.settings.block_title != blank %}
                                                        {{ block.settings.block_title | upcase }}
                                                    {% else %}
                                                        {{ block.settings.collection.title | upcase }}
                                                    {% endif %}
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                <div class="swiper-button-prev"></div>
                <div class="swiper-button-next"></div>
            </div>
        </div>
        
        {% if section.settings.cta_text != blank and section.settings.cta_link != blank %}
        {% style %}
          .section-{{ section.id }} .cta_container {
            padding-top: {{ section.settings.cta_padding_top }}px;
            padding-bottom: {{ section.settings.cta_padding_bottom }}px;
          }
          
          .section-{{ section.id }} .cta_btn {
            color: {{ section.settings.cta_text_color }};
            border: 1px solid {{ section.settings.cta_border_color }};
            background: {{ section.settings.cta_background }}
          }
    
          .section-{{ section.id }} .cta_btn:hover {
            color: {{ section.settings.cta_hover_text_color }};
            border: 1px solid {{ section.settings.cta_hover_border_color }};
            background: {{ section.settings.cta_hover_background }}
          }
        {% endstyle %}
        {% assign pos_class = 'cta_center' %}
        {% case section.settings.cta_position %}
          {% when 'left' %}
            {%- assign pos_class = 'cta_left' -%}
          {% when 'right' %}
            {%- assign pos_class = 'cta_right' -%}
        {% endcase %}
        <div class="cta_container {{ pos_class }}">
          <a class="cta_btn" href="{{ section.settings.cta_link }}" title="">{{ section.settings.cta_text }}</a>
        </div>
      {% endif %}
      
    </div>
</section>

<script>

    new Swiper('.swiper-{{ section.id }}', {
        slidesPerView: 4,
        spaceBetween: 30,
        navigation: {
            nextEl: '.swiper-button-next',
            prevEl: '.swiper-button-prev',
        },
        breakpoints: {
          "@0.00": {
            slidesPerView: 1,
            spaceBetween: 5,
          },
          "@0.75": {
            slidesPerView: 2,
            spaceBetween: 10,
          },
          "@1.50": {
            slidesPerView: 3,
            spaceBetween: 30,
          },
          "@2.0": {
            slidesPerView: 4,
            spaceBetween: 30,
          },
        },
    })

</script>

