{{ 'custom-newsletter-form.css' | asset_url | stylesheet_tag }}

{% style %}
    .section-{{ section.id }} {
        padding-top: {{ section.settings.padding_top }}em;
        padding-bottom: {{ section.settings.padding_bottom }}em;
    }
    .section-{{ section.id }} .cs-container {
        max-width: 900px;
        text-align: center;
    }
{% endstyle %}

<section class="section-{{ section.id }} cs-klaviyo-form">
    <div class="cs-container">
        <div class="klaviyo-form-SxWvjk"></div>
    </div>
</section>

{% schema %}
{
"name": "Custom Klaviyo Form",
"settings": [
    {
        "type": "header",
        "content": "Paddings"
    },
    {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 10,
        "step": 1,
        "unit": "em",
        "label": "Padding Top",
        "default": 4
    },
    {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 10,
        "step": 1,
        "unit": "em",
        "label": "Padding Bottom",
        "default": 4
    }
]
}
{% endschema %}
