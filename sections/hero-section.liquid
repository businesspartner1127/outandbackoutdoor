<style>
    .shop-page-header {
        display: flex;
        width: 100%;
        height: 65vh;
        margin-top: 0px;
        flex-direction: row;
        justify-content: center;
        border-bottom: 1px solid #dee2e6;
        background-color: #f1f2f3;
    }
    .icon-container-shop {
        display: flex;
        width: 50%;
        flex-direction: column;
        justify-content: center;
        padding: 35px 50px;
    }
    .everyone-container-shop {
        display: flex;
        width: 80%;
        justify-content: center;
        flex-direction: column;
        align-items: flex-start;
        padding: 35px 50px;
    }
    .shop-container-text {
        text-align: flex-start;
        font-family: 'Uniform', sans-serif;
        color: #F00000;
        line-height: normal;
        font-size: 2rem;
        margin-bottom: 15px;
    }
    .list {
        display: flex;
        justify-content: flex-start;
        align-items: flex-start;
        flex-wrap: wrap;
    }
    .listItem {
        display:flex;
        flex: 1 0 50%;
        box-sizing: border-box;
        justify-content: center;
        margin-bottom: 10px;
        color: #03ff24;
        justify-content: flex-start;
    }
    .faCheck {
        margin-right:5%;
        color: #03ff24;
        font-size: 2em;
    }
    .faText {
        color: #262262;
        font-size: 1.5em;
    }
    .icon-image-container {
        display: flex;
        justify-content: center;
    }
    .icon-container-image-shopping {
        height: 100%;
    }
    .header-container-image-selling {
        height: 100%;
    }
    @media (max-width: 1300px) {
        .icon-container-shop {
            padding: 0;
        }
        .icon-image-container {
            height: 65%;
        }
    }
    @media (max-width: 1120px) {
        .icon-image-container {
            height: 55%;
        }
        .shop-container-text {
            position: absolute;
            text-align: center;
            text-shadow: 1px 1px 1px rgb(0 0 0 / 59%);
            z-index: 2;
        }
        .shop-page-header {
            flex-direction: column;
            height: 100%;
        }
        .icon-container-shop {
            width: 50%;
            padding: 35px 50px;
            position: absolute;
            z-index: 1;
            left: 30%;
        }
        .list {
            flex-wrap: wrap;
            z-index: 2;
            padding-top: 550px;
        }
        .shop-container-text h1 {
            font-size: 3rem !important;
            text-transform: uppercase;
            color: white;
        }
        .everyone-container-shop {
            width: 100% !important;
            padding: 5% !important;
            align-items: center !important;
        }
    }
    @media (max-width: 875px) {
        .icon-container-shop {
            justify-content: center;
        }
        .shop-page-header {
            height: 40vh;
            margin-bottom:5vh;
        }
        .icon-image-container {
            height: 75%;
        }
        .shop-container-text {
            font-size: 1.2rem;
        }
        .faCheck {
            font-size: 1.2;
        }
        .faText {
            font-size: 1.2em;
        }
        .shop-container-text h1 {
            font-size: 2.5rem !important;
        }
    }
    @media (max-width: 600px) {
        .icon-container-shop {
            width: 100% !important;
            left: 1%;
        }
        .shop-container-text h1 {
            font-size: 2rem !important;
        }
        .icon-image-container {
            margin-left: 45px;
        }
        .shop-container-text {
            font-size: 1.5rem;
        }
        .faCheck {
            font-size: 1.5rem;
        }
        .faText {
            font-size: 0.8rem;
        }
        .list {
            flex-wrap: wrap;
            z-index: 2;
            padding-top: 450px;
        }
    }
    .shop-container-text h1 {
        font-size: 4rem;
        text-transform: uppercase;
    }
</style>

<div id="shop-page-header" class="shop-page-header">
    <div class="everyone-container-shop">
    <div class="shop-container-text">
      <h1>We've Got Something For Everyone</h1>
    </div>
    <div class="list">
        <div class="listItem"><i class="fa fa-check faCheck"></i><div class="faText">Steep Discounts</div></div>
        <div class="listItem"><i class="fa fa-check faCheck"></i><div class="faText">ALWAYS Free Shipping and Returns</div></div>
        <div class="listItem"><i class="fa fa-check faCheck"></i><div class="faText">Top Outdoor Brands</div></div>
        <div class="listItem"><i class="fa fa-check faCheck"></i><div class="faText">Tons of New and Used Gear</div></div>
    </div>
  </div>
  <div class="icon-container-shop">
      <div class="icon-image-container">
        <img class="icon-container-image-shopping" src="//cdn.shopify.com/s/files/1/0550/6682/0803/files/Jacket_with_Heart.png?v=1656608926">
      </div>
  </div>
</div>


