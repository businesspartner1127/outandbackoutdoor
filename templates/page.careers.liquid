{% style %}
  .container{
    padding: 0px 15px;
  }	
  .header-image {
    background:linear-gradient(0deg, rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url({{ 'careers_bg.jpg' | asset_url }}) no-repeat;
    background-position: 100%;
    background-size: cover;
    height: 35vh;
    padding: 0 50px;
    display: flex;
    justify-content: center;
    flex-direction: column;
  }

  .header-text-wrap {
    margin-top: 55px !important;
  }
  
  .header-text {
    text-align: center;
    color: #fff;
  }
  .job-description-container{
    padding-left: 15px
  }

  .faq .section .job-description-container h5{
    margin: 15px 0 10px 0; 
    color: #f00000;
    cursor: none;
  }

  .section .job-description-container ul li p{
    list-style-type: circle;
    text-align: left !important;
    color: #262262;
    font-size: 1.2rem;
    line-height: 1.8rem;
    font-weight: lighter !important;
  }
  
  @media (max-width: 768px) {
    .header-image {
      height: 25vh;
    }
    .header-text {
      top: 220px;
      font-size: 2.5rem;
    }
  }
  
  @media (max-width: 480px) {
    .header-image {
      height: 30vh;
    }
    .header-text-wrap {
      margin-top: 35px !important;
    }
    .header-text {
      top: 190px;
      font-size: 2.0rem;
    }
  }
{% endstyle %}
